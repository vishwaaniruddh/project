# Environment Configuration Example
# Copy this file to .env and update the values for your environment

# Environment: development, testing, or production
APP_ENV=development

# Application Settings
APP_NAME="Site Installation Management"
APP_DEBUG=true
APP_URL=http://localhost

# Development Database Configuration
DEV_DB_HOST=localhost
DEV_DB_NAME=site_installation_management
DEV_DB_USER=your_username
DEV_DB_PASS=your_password
DEV_DB_CHARSET=utf8mb4

# Testing Database Configuration
TEST_DB_HOST=localhost
TEST_DB_NAME=site_installation_management_test
TEST_DB_USER=your_username
TEST_DB_PASS=your_password
TEST_DB_CHARSET=utf8mb4

# Production Database Configuration
PROD_DB_HOST=localhost
PROD_DB_NAME=your_production_db
PROD_DB_USER=your_production_user
PROD_DB_PASS=your_production_password
PROD_DB_CHARSET=utf8mb4

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=assets/uploads

# Security Settings
SESSION_TIMEOUT=3600
BCRYPT_ROUNDS=12

# Email Settings (optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME=

# Logging
LOG_LEVEL=info
LOG_PATH=logs/app.log